<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dazze.navigationforblind.MainActivity">

    <Button
        android:id="@+id/goPLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보호자 로그인" />

    <Button
        android:id="@+id/goPJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보호자 회원가입" />

    <Button
        android:id="@+id/goULogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 로그인" />

    <Button
        android:id="@+id/goUJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 회원가입" />

    <Button
        android:id="@+id/goMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="맵 보이기" />

    <Button
        android:id="@+id/goMake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="경로 설정" />

    <Button
        android:id="@+id/showWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="경로 보기" />

</LinearLayout>
